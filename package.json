{
  "name": "lab-management-app",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "20"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:rules": "node scripts/build-rules.js",
    "start": "next start",
    "lint": "next lint",
    "deploy": "npm run build:rules && firebase deploy",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "deploy:rules": "firebase deploy --only firestore:rules && firebase deploy --only storage",
    "deploy:indexes": "firebase deploy --only firestore:indexes",
    "deploy:functions": "cd firebase/functions && npm run build && cd ../.. && firebase deploy --only functions",
    "deploy:hosting": "npm run build && firebase deploy --only hosting",
    "deploy:all": "npm run deploy:rules && npm run deploy:functions && npm run deploy:hosting",
    "build:all": "npm run build && cd firebase/functions && npm run build",
    "snapshot:create": "./scripts/create-snapshot.sh",
    "snapshot:list": "./scripts/list-snapshots.sh",
    "protection:install": "./scripts/install-hooks.sh",
    "migrate:tokens": "ts-node --compiler-options \"{\\\"module\\\":\\\"commonjs\\\"}\" scripts/migrate-tokens.ts"
  },
